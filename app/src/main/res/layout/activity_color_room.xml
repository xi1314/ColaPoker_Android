<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/room_background"
    android:orientation="horizontal"
    tools:context=".live.ColorRoomActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="23"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="3dp"
            android:layout_weight="23">

            <com.tencent.rtmp.ui.TXCloudVideoView
                android:id="@+id/color_room_video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="3dp" />

            <RelativeLayout
                android:id="@+id/color_room_live_not_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/room_live_not_background">

                <TextView
                    android:id="@+id/color_room_live_not_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="主播正在赶来的路上" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/room_live" />


            <RelativeLayout
                android:id="@+id/color_room_title_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/room_title">

                <TextView
                    android:id="@+id/color_room_title1"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="第453期 第20局"
                    android:textColor="@color/color_white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/color_room_title_status"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_toRightOf="@+id/color_room_title1"
                    android:gravity="center"
                    android:text="尚未开始"
                    android:textColor="@color/color_white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/color_room_title_countdown"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_toRightOf="@+id/color_room_title_status"
                    android:gravity="center"
                    android:text=" 剩余一秒"
                    android:textColor="@color/color_white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/color_room_title_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:textColor="@color/color_white"
                    android:textSize="12dp" />
            </RelativeLayout>

            <GridView
                android:id="@+id/color_room_mgv_history"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:horizontalSpacing="8dp"
                android:divider="@null"
                android:stretchMode="none"
                android:scrollbars="none"
                android:layout_marginTop="23dp"/>






            <ImageView
                android:id="@+id/color_room_iv_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/color_room_title_rl"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:visibility="gone"
                android:src="@drawable/room_voice_select" />

            <ImageView
                android:id="@+id/color_room_withdraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/color_room_total_betting_ll"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:src="@drawable/room_withdraw_select" />

            <ImageView
                android:id="@+id/color_room_iv_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_above="@+id/color_room_withdraw"
                android:src="@drawable/five" />


            <LinearLayout
                android:id="@+id/color_room_total_betting_ll"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/color_room_total_betting_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="1dp"
                        android:background="@drawable/room_total_betting"
                        android:gravity="center"
                        android:paddingLeft="11dp"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/color_white"
                        android:textSize="10dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/color_room_total_betting_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/room_total_betting"
                        android:gravity="center"
                        android:paddingLeft="11dp"
                        android:singleLine="true"
                        android:text="0"
                        android:paddingBottom="1dp"
                        android:textColor="@color/color_white"
                        android:textSize="10dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/color_room_total_betting_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/room_total_betting"
                        android:gravity="center"
                        android:paddingBottom="1dp"
                        android:paddingLeft="11dp"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/color_white"
                        android:textSize="10dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/color_room_total_betting_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/room_total_betting"
                        android:gravity="center"
                        android:paddingBottom="1dp"
                        android:paddingLeft="11dp"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/color_white"
                        android:textSize="10dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/color_room_total_betting_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/room_total_betting"
                        android:gravity="center"
                        android:paddingBottom="1dp"
                        android:paddingLeft="11dp"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/color_white"
                        android:textSize="10dp" />
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="3dp"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/color_room_betting_card_one"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/room_spades_select"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/color_room_betting_card_tv_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/user_bet"
                        android:gravity="center"
                        android:paddingBottom="1dp"
                        android:layout_centerVertical="true"
                        android:paddingLeft="11dp"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/text_color"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/color_room_betting_card_count_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/color_room_betting_card_tv_one"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="3dp"
                        android:text="0次"
                        android:textColor="@color/text_color"
                        android:textSize="10dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/color_room_betting_card_two"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/room_hearts_select"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/color_room_betting_card_tv_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/user_bet"
                        android:gravity="center"
                        android:paddingBottom="1dp"
                        android:paddingLeft="11dp"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/text_color"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/color_room_betting_card_count_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/color_room_betting_card_tv_two"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="3dp"
                        android:text="0次"
                        android:textColor="@color/text_color"
                        android:textSize="10dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/color_room_betting_card_three"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/room_clubs_select"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/color_room_betting_card_tv_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="11dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/user_bet"
                        android:gravity="center"
                        android:paddingBottom="1dp"
                        android:paddingLeft="11dp"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/text_color"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/color_room_betting_card_count_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/color_room_betting_card_tv_three"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="3dp"
                        android:text="0次"
                        android:textColor="@color/text_color"
                        android:textSize="10dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/color_room_betting_card_four"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/room_diamonds_select"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/color_room_betting_card_tv_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/user_bet"
                        android:gravity="center"
                        android:paddingBottom="1dp"
                        android:paddingLeft="11dp"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/text_color"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/color_room_betting_card_count_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/color_room_betting_card_tv_four"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="3dp"
                        android:text="0次"
                        android:textColor="@color/text_color"
                        android:textSize="10dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/color_room_betting_card_five"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/room_jokers_select"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/color_room_betting_card_tv_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/user_bet"
                        android:gravity="center"
                        android:paddingBottom="1dp"
                        android:paddingLeft="11dp"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/text_color"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/color_room_betting_card_count_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/color_room_betting_card_tv_five"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="3dp"
                        android:text="0次"
                        android:textColor="@color/text_color"
                        android:textSize="10dp" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/color_room_tv_balance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:background="@drawable/room_betting"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/color_white"
                android:textSize="8dp" />

            <Button
                android:id="@+id/color_room_bt_charge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/room_charge_select" />

            <Button
                android:id="@+id/color_room_bt_mention"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/room_mention_select" />

            <Button
                android:id="@+id/color_room_bt_retreat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/room_retreat_select" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="35"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30">

                <ImageView
                    android:id="@+id/color_room_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/room_not_open_card" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingTop="35dp"
                    android:src="@drawable/room_history_people" />
            </RelativeLayout>

            <GridView
                android:id="@+id/color_room_gv_history"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="26dp"
                android:layout_weight="16"
                android:background="@drawable/room_history_rim"
                android:listSelector="@android:color/transparent"
                android:numColumns="7"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:scrollbars="none"
                android:verticalSpacing="3dp">

            </GridView>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
